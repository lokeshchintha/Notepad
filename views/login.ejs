<%- include("partials/header"); -%>
<div class="col-sm-6 col-sm-offset-3">
	<h1><span class="fa fa-sign-in"></span> Login</h1>
	<h4> <%= login  %> </h4>
    <form action="/login" method="post">
        <div class="form-group">
            <label class="clr">Email</label>
            <input type="text" class="form-control" name="email" style="font-size: medium;">
        </div>
        <div class="form-group">
            <label class="clr">Password</label>
            <input type="password" class="form-control" name="password" style="font-size: medium;">
        </div>

        <button type="submit" class="btn btn-primary" style="font-size: medium;">Login</button>
    </form>

    <hr>

    <h4>Don't have an account? <a href="/signup" class="clr1">Signup</a></h4>
    <h4>Or go <a href="/" class="clr1">home</a>.</h4>

</div>
<%- include("partials/footer"); -%>
